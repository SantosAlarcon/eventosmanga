---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";
import { Image } from "astro:assets";
import MobileMenu from "./MobileMenu.astro";
---

<header>
    <nav class="header__nav">
        <a href="/eventosmanga/"
            ><Image
                class="header__nav__logo"
                src="/eventosmanga/public/LogoWithText.svg"
                aria-label={SITE_TITLE}
                height="400"
                width="160"
                alt="Logo"
            /></a
        >
        <div class="header__nav__links">
            <HeaderLink class="header__nav__link" href="/eventosmanga/eventos"
                >Eventos</HeaderLink
            >
            <HeaderLink
                class="header__nav__link"
                href="/eventosmanga/calendario">Calendario</HeaderLink
            >
            <a href="https://github.com/SantosAlarcon/eventosmanga/issues/new?assignees=santosalarcon&labels=enhancement&projects=&template=solicitud-nuevo-evento.yml&title=A%C3%B1adir+nuevo+evento%3A+"
                target="_blank"
                class="header__nav__button"
            >AÃ±adir nuevo evento</a>
        </div>
    </nav>
    <MobileMenu />
</header>
<style>
    header {
        padding: 1.5rem 3rem;
        background: var(--red);
        box-shadow: 0 2px 8px rgba(var(--black), 5%);

        @media (width <= 512px) {
            padding: 1.5rem;
        }
    }

    .header__nav__logo {
        height: 3.5rem;
        border-radius: 0%;

        @media (width <= 512px) {
            width: 6rem;
            height: auto;
        }
    }

    .header__nav__links {
        display: flex;
        align-items: center;
        gap: 1.5rem;
        font-size: 1rem;

        @media (width <= 640px) {
            display: none;
        }
    }

    .header__nav__button {
        background-color: var(--foreground);
        color: var(--red) !important;
        font-weight: bold;
        font-size: 0.8rem;
        padding: 0.5rem 1rem;
        border-radius: 1rem;
        transition: all 0.3s ease-in-out;

        &:hover {
            transform: scale(1.1);
            background-color: #ee6;
            box-shadow: 0 0 1rem #ee6;
        }
    }

    h2 {
        margin: 0;
        font-size: 2rem;
    }

    h2 a,
    h2 a.active {
        text-decoration: none;
    }
    nav {
        display: flex;
        align-items: center;
        justify-content: space-between;
    }
    nav a {
        color: var(--foreground);
        text-decoration: none;
    }
    nav a.active {
        text-decoration: none;
        border-bottom-color: var(--accent);
    }
</style>
