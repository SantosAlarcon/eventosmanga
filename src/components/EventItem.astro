---
import { Image } from "astro:assets";
import FormattedDate from "./FormattedDate.astro";
const { event } = Astro.props;
import LocationIcon from "../../public/icons/location.svg";
import CalendarIcon from "../../public/icons/calendar.svg";
---

<a href={`/evento/${event.id}/`}>
    <section class="event__item">
        <div class="event__item__cover__container">
            <Image
                class="event__item__image"
                src={event.data.heroImage}
                alt={event.data.title}
                loading="lazy"
                transition:name={`cover-${event.id}`}
                width="640"
                height="200"
            />
            <p class="event__item__date">
                <CalendarIcon
                    width={24}
                    height={24}
                    class="event__item__date__icon"
                    color="#eee"
                />
                {
                    new Date(event.data.startDate).getTime() ===
                    new Date(event.data.endDate).getTime() ? (
                        <FormattedDate date={event.data.startDate} />
                    ) : (
                        <>
                            <FormattedDate date={event.data.startDate} /> -
                            <FormattedDate date={event.data.endDate} />
                        </>
                    )
                }
            </p>
        </div>
        <section class="event__item__info">
            <h2 class="event__item__title">{event.data.title}</h2>
            <div class="event__item__footer">
                <p class="event__item__location">
                    <LocationIcon
                        width={24}
                        height={24}
                        class="event__item__location__icon"
                        color="#eee"
                    />
                    {event.data.province}
                </p>
                <p class="event__item__price">
                    <span class="event__item__price__value">
                        {event.data.price}
                    </span>
                    <span class="event__item__price__currency">â‚¬</span>
                </p>
            </div>
        </section>
    </section>
</a>

<style>
    a {
        text-decoration: none;
        color: var(--foreground);
    }

    .event__item {
        display: flex;
        flex-direction: column;
        padding: 1rem;
        width: 380px;

        @media (width <= 640px) {
            width: 100%;
        }

    }

    .event__item__info {
        background-color: #e662;
        backdrop-filter: blur(0.15rem);
        border-radius: 0 0 0.5rem 0.5rem;
        padding: 1rem;
        box-shadow: 0 1rem 1rem rgba(0, 0, 0, .2);
    }

    .event__item__title {
        font-size: 1.25rem;
        line-height: 1.65;
        font-weight: bold;
        color: var(--foreground);
    }

    .event__item__footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
        font-size: 0.8rem;
    }

    .event__item__price {
        display: flex;
        align-items: center;
        color: var(--foreground-light);
        font-size: 2rem;
        font-weight: bold;
        margin: 0;
    }

    .event__item__cover__container {
        border-radius: 1rem 1rem 0 0;
        overflow: hidden;
        width: 100%;
    }

    .event__item__image {
        width: 100%;
        height: 31rem;
        object-fit: cover;
        transition: all 0.2s ease-in-out;
        background-color: var(--foreground);
        border-radius: 1rem 1rem 0 0;

        &:hover {
            filter: brightness(1.2);
            transform: scale(1.1);
        }

        @media (width <= 512px) {
            height: auto;
        }
    }

    .event__item__location {
        display: flex;
        align-items: center;
        gap: 0.25rem;
        margin: 0;
        font-size: 1rem;
    }

    .event__item__location__icon {
        width: 1rem;
        height: 1rem;
        border-radius: 0;
    }

    .event__item__date {
        display: flex;
        align-items: center;
        gap: 0.25rem;
        margin-top: -3rem;
        margin-left: .5rem;
        color: var(--foreground-light);
        background-color: #a00b;
        backdrop-filter: blur(0.25rem);
        border: 1px solid #fff6;
        padding: .25rem 1rem;
        border-radius: 5rem;
        width: fit-content;
        font-size: .8rem;
        font-weight: bold;
        position: relative;
    }

    .event__item__date__icon {
        width: 1rem;
        height: 1rem;
        border-radius: 0;
    }
</style>
