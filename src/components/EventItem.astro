---
const { event } = Astro.props;
const eventTitleSlug = event.title.toLowerCase().replace(/\s/g, "-");
console.log(event);
---

<article class="event__item">
    <a href={`/evento/${eventTitleSlug}/`}>
        <div class="event__item__cover__container">
            <img
                class="event__item__image"
                src={event.heroImage}
                alt={event.title}
                loading="lazy"
            />
        </div>
        <h2 class="event__item__title">{event.title}</h2>
        <div class="event__item__footer">
            <p class="event__item__location">
                <img class="event__item__location__icon" src="/location.svg" />
                {event.province}
            </p>
            <p class="event__item__date">
                {event.startDate.toLocaleDateString()} -{" "}
                {event.endDate.toLocaleDateString()}
            </p>
        </div>
    </a>
</article>

<style>
    .event__item {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        padding: 1rem;

        & a {
            text-decoration: none;
            color: var(--foreground);
        }
    }

    .event__item__title {
        font-size: 1.25rem;
        font-weight: bold;
        color: var(--foreground);
    }

    .event__item__footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
        font-size: 0.8rem;
    }

    .event__item__cover__container {
        border-radius: 0.5rem;
        overflow: hidden;
        width: 100%;
    }

    .event__item__image {
        width: 100%;
        height: 15rem;
        object-fit: cover;
        transition: all 0.2s ease-in-out;
        background-color: var(--foreground);
        border-radius: 0.5rem;

        &:hover {
            filter: brightness(1.2);
            transform: scale(1.1);
        }
    }

    .event__item__location {
        display: flex;
        align-items: center;
        gap: 0.25rem;
        margin: 0;
    }

    .event__item__location__icon {
        width: 1rem;
        height: 1rem;
        filter: invert(1);
    }

    .event__item__date {
        margin: 0;
        color: var(--foreground-light);
    }
</style>
