<style>
    footer {
        font-size: 0.9rem;
        padding: 3rem;
        background-color: var(--red);
        color: var(--foreground);
        text-align: center;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        align-items: center;

        & a {
            color: #f66;
        }

        @media (width <= 640px) {
            padding: 1.25rem;
            flex-direction: column;
            gap: 1rem;
            padding-bottom: 7rem;
        }
    }

    .footer__provinces {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        width: 70%;

        @media (width <= 640px) {
            width: 100%;
            flex-direction: column;
            gap: 1rem;
        }
    }

    .footer__provinces__title {
        @media (width <= 640px) {
            font-size: clamp(1.5rem, 2vw, 2rem);
        }
    }

    .footer__provinces__list {
        list-style: none;
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1rem;
        padding-bottom: 5rem;

        & li {
            transition: all 0.25s ease-in-out;
        }

        & li:hover {
            transform: scale(1.1);
            font-weight: 900;
        }

        @media (width <= 640px) {
            grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
        }
    }

    .footer__provinces__list__item {
        color: var(--white);
        text-decoration: none;
    }

    .footer__copyright {
        display: flex;
        justify-content: space-between;
        gap: 1rem;
        width: 100%;

        @media (width <= 640px) {
            flex-direction: column;
            align-items: center;
            gap: 0.5rem;
        }
    }

    .social-links {
        display: flex;
        justify-content: center;
        gap: 1em;
    }
    .social-links a {
        transition: all 0.25s ease-in-out;
        text-decoration: none;
        color: var(--white);
        opacity: 0.5;
    }
    .social-links a:hover {
        transform: scale(1.3);
        opacity: 1;
        color: var(--white);
    }

    svg {
        width: 1.5em;
        height: 1.5em;
    }
</style>
