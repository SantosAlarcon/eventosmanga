---
import { type CollectionEntry, getCollection } from "astro:content";
import MainLayout from "../../layouts/MainLayout.astro";

export async function getStaticPaths() {
    const events = await getCollection("event");
    return events.map((event) => ({
        params: { slug: event.slug },
        props: event,
    }));
}
type Props = CollectionEntry<"event">;

const event = Astro.props;
const { Content } = await event.render();
---

<MainLayout title={`Eventos Manga - ${event.data.title}`}>
    <div class="event__container">
        <div class="event__info__header">
            <div class="event__info__cover">
                <img
                    src={event.data.heroImage}
                    class="event__info__cover__image"
                    transition:name={`${event.slug}-cover`}
                />
            </div>
            <div class="event__info__data">
                <h1 class="event__info__title">{event.data.title}</h1>
                <p class="event__info__date">
                    <img
                        src="/public/icons/calendar.svg"
                        alt="calendar-icon"
                        class="event__info__icon"
                    />
                    {event.data.startDate.toLocaleDateString()} - {
                        event.data.endDate.toLocaleDateString()
                    }
                </p>
                <p class="event__info__schedule">
                    <img
                        src="/public/icons/clock.svg"
                        alt="clock-icon"
                        class="event__info__icon"
                    />
                    {event.data.startTime} - {event.data.endTime}
                </p>
                <p class="event__info__link">
                    <img
                        src="/public/icons/link.svg"
                        alt="link-icon"
                        class="event__info__icon"
                    />
                    <a
                        href={event.data.url}
                        target="_blank"
                        rel="noopener noreferrer"
                    >
                        {event.data.url}
                    </a>
                </p>
                <p class="event__info__location">
                    <img
                        src="/public/icons/location.svg"
                        alt="location-icon"
                        class="event__info__icon"
                    />
                    {event.data.location} - ({event.data.province})
                </p>
                {
                    event.data.twitterProfile && (
                        <p class="event__info__twitter">
                            <a
                                href={`${event.data.twitterProfile}`}
                                target="_blank"
                                rel="noopener noreferrer"
                                class="event__info__twitter__button"
                                arial-label="Twitter"
                            >
                                <img
                                    src="/public/icons/twitter.svg"
                                    alt="twitter-icon"
                                    class="event__info__twitter__icon"
                                />
                            </a>
                        </p>
                    )
                }
            </div>
        </div>

        <div class="event__info__content">
            <Content />
        </div>
    </div>
</MainLayout>

<style is:global>
    h1 {
        margin-bottom: 1rem;
    }

    h2,
    h3,
    h4,
    h5,
    h6 {
        margin: 2rem 0;
    }

    ul > li {
        margin-left: 3rem;
    }

    .event__container {
        padding: 3rem 10rem;

        & > h2 {
            font-size: 2rem !important;
        }

        display: flex;
        flex-direction: column;
        gap: 2rem;
    }

    .event__info__header {
        display: flex;
        justify-content: center;
        align-items: flex-start;
        gap: 1.5rem;
    }

    .event__info__cover__image {
        width: 30rem;
        height: auto;
        overflow: hidden;
        border-radius: 10px;
    }

    .event__info__title {
        font-size: 2rem;
    }

    .event__info__icon {
        width: 1rem;
        height: 1rem;
        filter: invert(1);
        border-radius: 0;
    }

    .event__info__location {
        display: flex;
        align-items: center;
        gap: 0.25rem;
        margin: 0;
    }

    .event__info__date {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        margin: 0;
        color: var(--foreground-light);
        font-size: 1rem;
    }

    .event__info__schedule {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        margin: 0;
        color: var(--foreground-light);
        font-size: 1rem;
    }

    .event__info__link {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        margin: 0;
    }

    .event__info__link > a {
        color: var(--foreground);
        text-decoration: none;
        font-size: 1rem;
    }

    .event__info__location {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        margin: 0;
        color: var(--foreground-light);
        font-size: 1rem;
    }

    .event__info__twitter__button {
        margin: 1rem 0;
        background-color: var(--foreground);
        padding: 0.5rem;
        border-radius: 100%;
        width: fit-content;
        height: fit-content;
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 0.5rem;
    }

    .event__info__twitter__icon {
        width: 1.75rem;
        height: 1.75rem;
    }
</style>
