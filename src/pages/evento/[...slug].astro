---
import { type CollectionEntry, getCollection } from "astro:content";
import MainLayout from "../../layouts/MainLayout.astro";

export async function getStaticPaths() {
    const events = await getCollection("event");
    return events.map((event) => ({
        params: { slug: event.slug },
        props: event,
    }));
}
type Props = CollectionEntry<"event">;

const event = Astro.props;
const { Content } = await event.render();
---

<MainLayout title={`Eventos Manga - ${event.data.title}`}>
    <div class="event__container">
        <div class="event__info__header">
            <div class="event__info__cover">
                <img
                    src={event.data.heroImage}
                    class="event__info__cover__image"
                />
            </div>
            <div class="event__info__data">
                <h1 class="event__info__title">{event.data.title}</h1>
                <p class="event__info__date">
                    <img
                        src="/public/icons/calendar.svg"
                        alt="calendar-icon"
                        class="event__info__icon"
                    />
                    {event.data.startDate.toLocaleDateString()} - {
                        event.data.endDate.toLocaleDateString()
                    }
                </p>
                <p class="event__info__schedule">
                    <img
                        src="/public/icons/clock.svg"
                        alt="clock-icon"
                        class="event__info__icon"
                    />
                    {event.data.startTime} - {event.data.endTime}
                </p>
                <p class="event__info__link">
                    <img
                        src="/public/icons/link.svg"
                        alt="link-icon"
                        class="event__info__icon"
                    />
                    <a
                        href={event.data.url}
                        target="_blank"
                        rel="noopener noreferrer"
                    >
                        {event.data.url}
                    </a>
                </p>
                <p class="event__info__location">
                    <img
                        src="/public/icons/location.svg"
                        alt="location-icon"
                        class="event__info__icon"
                    />
                    {event.data.location} - ({event.data.province})
                </p>
            </div>
        </div>

        <Content />
    </div>
</MainLayout>

<style>
    .event__container {
        padding: 2rem;
        color: var(--foreground);

        & > h2 {
            font-size: 2rem !important;
        }

        & > * {
            color: var(--foreground);
        }
    }

    .event__info__header {
        display: flex;
        justify-content: center;
        align-items: flex-start;
        gap: 1.5rem;
    }

    .event__info__cover__image {
        width: 100%;
        height: 30rem;
        overflow: hidden;
        border-radius: 10px;
    }

    .event__info__title {
        font-size: 2rem;
    }

    .event__info__icon {
        width: 1rem;
        height: 1rem;
        filter: invert(1);
        border-radius: 0;
    }

    .event__info__location {
        display: flex;
        align-items: center;
        gap: 0.25rem;
        margin: 0;
    }

    .event__info__date {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        margin: 0;
        color: var(--foreground-light);
        font-size: 1rem;
    }

    .event__info__schedule {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        margin: 0;
        color: var(--foreground-light);
        font-size: 1rem;
    }

    .event__info__link {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        margin: 0;
    }

    .event__info__link > a {
        color: var(--foreground);
        text-decoration: none;
        font-size: 1rem;
    }

    .event__info__location {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        margin: 0;
        color: var(--foreground-light);
        font-size: 1rem;
    }
</style>
