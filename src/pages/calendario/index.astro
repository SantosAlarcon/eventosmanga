---
import MainLayout from "../../layouts/MainLayout.astro";
import CalendarApp from "../../components/Calendar.jsx"
---

<MainLayout title="Eventos Manga - Calendario">
    <section class="calendario">
        <h1 class="calendario__title">Calendario</h1>
        <div class="calendario__content">
            <CalendarApp client:load />
        </div>
    </section>
</MainLayout>

<style>
    .calendario {
        padding: 2rem;
        color: var(--foreground);
    }

    .calendario__title {
        color: var(--foreground);
        font-size: 2.25rem;
    }

    .calendario__content {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 1rem;
    }
</style>
