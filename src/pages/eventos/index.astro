---
import { getCollection } from "astro:content";
import MainLayout from "../../layouts/MainLayout.astro";

// @ts-ignore
const events = (await getCollection("event")).filter((event) => new Date(event.data.startDate) >= new Date()).sort(
    (a, b) => a.data.startDate.valueOf() - b.data.startDate.valueOf(),
);
import EventItem from "../../components/EventItem.astro";
---

<MainLayout title="Eventos Manga - Próximos eventos">
    <section class="eventos">
        <div class="eventos__header">
            <a class="eventos__header__link" href="/eventos/pasados">
                Ver Eventos pasados
            </a>
        </div>
        <h1 class="eventos__title">Próximos eventos</h1>
        <div class="eventos__content">
            <ul class="eventos__list">
                {
                    events.map((event) => (
                        <li class="eventos__list__item">
                            <EventItem event={event} />
                        </li>
                    ))
                }
            </ul>
        </div>
    </section>
</MainLayout>

<style>
    a {
        color: var(--foreground);
    }

    .eventos {
        padding: 3rem;
        color: var(--foreground);
        display: flex;
        flex-direction: column;

        @media (width <= 640px) {
            padding: 1.25rem;
            align-items: center;
            justify-content: center;
        }
    }

    .eventos__header {
        margin-bottom: 2rem;
    }

    .eventos__title {
        color: var(--foreground);
        font-size: 2.25rem;
    }

    .eventos__content {
        display: flex;
        align-items: center;
        gap: 1rem;

        @media (width <= 640px) {
            width: 100%;
        }
    }

    .eventos__list {
        list-style: none;
        padding: 0;
        display: grid;
        grid-template-columns: repeat(4, minmax(20rem, 1fr));
        gap: 1.5rem;
        width: 100%;

        @media (width <= 640px) {
            grid-template-columns: repeat(1, minmax(20rem, 1fr));
        }
    }
</style>
